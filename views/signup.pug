extends index

block variables
  - var containerClassName='container-signup'

block content 
  section.signup
    form(class='signup__form' action='')
      h3(class='signup__heading') Sign Up
      div(class='signup__name-wrapper')
        label(class='label label__name' for='fullName') Fullname
        input#fullName(class='input input__name' type='text' name='fullName' required)
      div(class='signup__email-wrapper')
        label(class='label label__email' for='email')
          | Email
        input#email(class='input input__email' type='email' name='email' required)
      div(class='signup__password-wrapper')
        label(class='label label__password' for='password') Password
        input#password(class='input input__password input__password--signup' type='password' name='password' minlength='8' required)
        label(class='label label__password-confirm' for='passwordConfirm') Confirm Password
        input#passwordConfirm(class='input input__password-confirm input__password-confirm--signup' type='password' name='passwordConfirm' minlength='8' required)
        br
        input#checkbox-password(class='show-password' type='checkbox') 
        label(class='checkbox-password-label' for='checkbox-password')  Show Password
      button(type='submit' class='btn signup__btn')
        | Create Account
